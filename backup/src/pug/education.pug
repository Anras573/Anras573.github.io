mixin education(title, year, place)
  li.media
    .media-body
      h4.mt-0.mb-1= title
      p #[strong= year]
      p= place

#education.mb-5.mx-3
  .card.mb-3.border-0
    .card-block
      h2.text-center Education
      ul.list-unstyled
        +education('Bachelor of Software Development', '2015-2016', 'Erhvervsakademiet Lillebælt')
        hr
        +education('Academy Profession Graduate in Computer Science', '2012-2015', 'Erhvervsakademiet Sjælland')
